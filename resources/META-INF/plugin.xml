<idea-plugin version="2">
  <id>com.suhininalex.cloneDetection.plugin.id</id>
  <name>Clone detection plugin</name>
  <version>1.0</version>
  <vendor email="suhinin.alex@gmail.com">Suhinin Alex</vendor>

  <description><![CDATA[
      Detects project clones on-the-fly.<br>
    ]]></description>

  <idea-version since-build="131"/>

  <actions>
      <action id="ShowAllClonesAction" class="com.suhininalex.clones.ide.ShowAllClonesAction" text="Find clones in project" description="desc">
          <add-to-group group-id="AnalyzeMenu" anchor="last"/>
      </action>
      <action id="ShowMethodClonesAction" class="com.suhininalex.clones.ide.ShowMethodClonesAction" text="Find clones in method" description="desc">
          <add-to-group group-id="AnalyzeMenu" anchor="last"/>
      </action>
  </actions>

  <extensions defaultExtensionNs="com.intellij">
      <localInspection groupPath="Java" language="JAVA" shortName="CloneDetection"
                       groupBundle="messages.InspectionsBundle" enabledByDefault="true"
                       level="WARNING" implementationClass="com.suhininalex.clones.ide.InspectionProvider"/>
      <postStartupActivity implementation="com.suhininalex.clones.ide.PluginInitializer" />
      <applicationConfigurable instance="com.suhininalex.clones.ide.configuration.PluginConfigurable" groupId="tools" />
  </extensions>
</idea-plugin>